<div id="accordion" role="tablist" aria-multiselectable="true">
  <div class="card">
    <div class="card-header" role="tab" id="heading_1">
      <h5 class="mb-0">
        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapse_14" aria-expanded="false" aria-controls="collapse_14">
        Section 14 - User Image
        </a>
      </h5>
    </div>
    <div id="collapse_14" class="collapse" role="tabpanel" aria-labelledby="heading_1">
      <div class="card-block">
        <table class="table table-bordered table-condensed table-responsive">
          <thead>
            <tr>
              <th>Lecture Number</th>
              <th>Video Title</th>
              <th>Section Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @lectures.each do |post| %>
          <% if post.section_name == 'Section 14 - User Image' %>
          <tbody>
            <tr>
              <td>        
                <span class="badge badge-primary"><%= post.lecture_number %></span>
              </td>
              <td>
                <%= link_to course_post_path(@course, post) do %>
                <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= post.section_name %>
              </td>
              <td><%= link_to 'Show', course_post_path(@course, post), class: "btn btn-outline-success btn-sm" %></td>
              <% if current_user.try(:admin?) %>
              <td>
                <%= link_to 'Edit', edit_course_post_path(@course, post), class: "btn btn-outline-secondary btn-sm" if current_user.try(:admin?)  %>
              </td>
              <td>
                <%= link_to 'Destroy', course_post_path(@course, post), class: "btn btn-outline-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } if current_user.try(:admin?)  %>
              </td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

