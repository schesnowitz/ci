<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, placeholder: "Enter your email" %>
    <%= f.input :first_name, required: true, label: false, placeholder: "Enter your first name" %>
    <%= f.input :last_name, required: true, label: false, placeholder: "Enter your last name" %>
    <%= f.input :username, required: true, label: false, placeholder: "Enter your username" %> 
    <label>Upload a photo</label> 
    <%= f.input :image, as: :file, label: false %> 
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
