<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <thead>
    <tr>
      <th>Url</th>
      <th>Name</th>
      <th>Open in new tab</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.url %></td>

        <td>
        <% if link.open_in_new_tab? %>
        <%= link_to "http://#{link.url}", target: '_blank' do %>
          <%= link.name %>
        <% end %>
        <% else %>
        <%= link_to "http://#{link.url}" do %>
          <%= link.name %>
        <% end %>
        <% end %>
        </td>
        <td><%= link.open_in_new_tab %></td>
        <td><%= link_to 'Show', link %></td>
        <td><%= link_to 'Edit', edit_link_path(link) %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>
