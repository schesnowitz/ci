<%= render 'template_ones/edit_partials/services' %> 
<div class='container'>
  <%= bootstrap_flash %>  
  <br>
  <%= link_to "Home", root_path, class: "btn btn-outline-info btn-sm" %>
  <br><br>
  <%= simple_form_for(@template_one) do |f| %>
  <div class="form-inputs">
    <div class="col-sm-6 mx-auto">
      <h3>Title</h3>
      <%= f.input :service_hide, label: "Hide this module on main page?" %> 
      <%= f.input :service_title_1 %>
      <%= f.input :service_text_1 %>
    </div>
    <br>
    <hr>
    <div class="row">
      <div class="col-sm-3">
        <h3>Title</h3>
        <label>Icon 1 </label>
        <i id='service_icon_1_input' class="fa fa-<%= @template_one.service_icon_1 %> fa-2x"></i>
        <%= f.input :service_icon_1, collection: TemplateOne::FA_ICONS, include_blank: false, label: false %>
        <%= f.input :service_title_2 %>
        <%= f.input :service_text_2 %>
      </div>
      <div class="col-sm-3">
        <h3>Title</h3>
        <label>Icon 2 </label>
        <i id='service_icon_2_input' class="fa fa-<%= @template_one.service_icon_2 %> fa-2x"></i>
        <%= f.input :service_icon_2, collection: TemplateOne::FA_ICONS, include_blank: false, label: false %>  
        <%= f.input :service_title_3 %>
        <%= f.input :service_text_3 %>
      </div>
      <div class="col-sm-3">
        <h3>Title</h3>
        <label>Icon 3 </label>
        <i id='service_icon_3_input' class="fa fa-<%= @template_one.service_icon_3 %> fa-2x"></i>
        <%= f.input :service_icon_3, collection: TemplateOne::FA_ICONS, include_blank: false, label: false %>
        <%= f.input :service_title_4 %>
        <%= f.input :service_text_4 %>
      </div>
      <div class="col-sm-3">
        <h3>Title</h3>
        <label>Icon 4 </label>
        <i id='service_icon_4_input' class="fa fa-<%= @template_one.service_icon_4 %> fa-2x"></i>
        <%= f.input :service_icon_4, collection: TemplateOne::FA_ICONS, include_blank: false, label: false %>
        <%= f.input :service_title_5 %>
        <%= f.input :service_text_5 %>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, data: {disable_with: 'One moment please...'} %> 
    | <%= link_to "Home", root_path, class: "btn btn-default" %> 
  </div>
  <% end %>
</div>
<br><br><br><br> 

