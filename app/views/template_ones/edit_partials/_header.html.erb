<!-- Masthead -->
<% if @template_one.header_use_default_image == true || !@template_one.header_image_url.present? %>
<header class="masthead" style="background-image: url(<%= asset_url 'template_ones/header.jpg' %>);">
<% else %>
<header class="masthead" style="background-image: url(<%= asset_url @template_one.header_image_url(:version_1900x1267) if @template_one.header_image_url.present? %>);">
  <% end %>
  <div class="container h-100">
    <div class="row h-100">
      <div class="col-12 my-auto text-center text-white">
        <% if @template_one.header_use_default_svg == true || !@template_one.header_svg.present? %>
        <img class="masthead-img img-fluid mb-3" src="<%= asset_url 'template_ones/creative/profile.svg' %>" alt=""> 
        <% else %>
        <img class="masthead-img img-fluid mb-3" src="<%= asset_url @template_one.header_svg if @template_one.header_svg.present? %>" alt="">   
        <% end %>
        <%= bootstrap_flash %>
        <div id='header_title_show' class="masthead-title"><%= @template_one.header_title %></div>
        <hr class="colored">
        <div id='header_text_show' class="masthead-subtitle"><%= @template_one.header_text %></div>
      </div>
    </div>
  </div>
  <div class="scroll-down">
    <a class="btn js-scroll-trigger" href="#about">
    <i class="fa fa-angle-down fa-fw"></i>
    </a>
  </div>
</header>